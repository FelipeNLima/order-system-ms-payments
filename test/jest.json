{
  "moduleFileExtensions": ["js", "json", "ts"],
  "roots": ["src", "test"],
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["src/**/*.{js,jsx,ts,tsx}"],
  "coverageDirectory": "../coverage",
  "coverageReporters": ["lcov", "text"],
  "testEnvironment": "node",
  "verbose": true
}
